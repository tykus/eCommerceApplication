<h1>Listing Users</h1>
<% if current_user.admin %>
    <table>
      <tr>
        <th>Email</th>
        <th>Admin</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
      <% end %>
    </table>
<% end %>