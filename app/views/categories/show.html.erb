<p id="notice"><%= notice %></p>


<h2>Category:</h2>
<p>
<b>Category Name:</b>
<br />
<%= @category.category_name %>
</p>
<% if @category.photo.exists? %>
    <p>
    <b>Category Image:</b>
    <br />
    <%= image_tag(@category.photo.url) %>
    </p>
<% else %>
    <p>You should <%= link_to 'add', edit_category_path(@category) %> a category image.</p>
<% end %>


<table class="nav_icons">
  <tr>
    <td><%= link_to image_tag('icons/back.png', :alt => 'Back', :title => 'Back'), categories_path %></td>
    <td><%= link_to image_tag('icons/edit.png', :alt => "Edit", :title => "Edit"), edit_category_path(@category) %></td>
  </tr>
</table>
