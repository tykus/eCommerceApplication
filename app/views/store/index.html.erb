<h1>Welcome to our Store</h1>
<p>Here are our products!</p>
<% @products.each do |product| %>
    <div class="item">
      <div class='item_img'>
        <%= image_tag(product.picture) %>
      </div>
      <h3><%= product.product_name %></h3>
      <p><%= truncate(sanitize(product.description), :length => 90) %></p>
      <p><%= link_to "more...", :controller => "store", :action => "show", :id => product.id %></p>
      <p class='item_price'>
        <%= number_to_currency(product.unit_price,:unit=>'â‚¬') %>
      </p>
    </div>
<% end %>
