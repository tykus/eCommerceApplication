<!DOCTYPE html>
<html>
<head>
  <title>kidzboutique</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
    <div id="header">
      <%= link_to image_tag('header.png'), store_index_path %>
    </div>

    <!-- MENU -->
    <div id="menu">
        <ul>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Categories", categories_path %></li>
            <li><%= link_to "Stock", stock_items_path %></li>
            <li><%= link_to "Your Cart", :controller => "carts", :action => "your_cart" %></li>
        </ul>
        <!-- SEARCH FIELD -->
        <div id="search_form">
        <% form_tag products_path, :method => 'get' do %>
            <p>
              <%=  text_field_tag :search_query, params[:search_query] %>
              <%=  submit_tag "Search Products", :name => nil,
                              :class => "button" %>
            </p>
        <% end %>
        </div>
    </div>



    <%= yield %>


</div>
</body>
</html>
