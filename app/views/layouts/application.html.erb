<!DOCTYPE html>
<html>
<head>
  <title>kidZboutique</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <div id='header'>

  </div>
    <!-- MENU -->
    <div id="menu">
        <ul>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Categories", categories_path %></li>
            <li><%= link_to "Stock", stock_items_path %></li>
            <li><%= link_to "Your Cart", :controller => "carts", :action => "your_cart" %></li>
          <% if logged_in? %>
             <li><%= link_to 'Logout', logout_path %></li>
             <li><%= link_to "Create User", new_user_path %></li>
           </ul>
              <%= current_user.email %>
          <% else %>
              <li><%= link_to "Login", login_path %></li>
              </ul>
          <% end %>


        <!-- SEARCH FIELD -->
        <div id="search_form">
        <% form_tag products_path, :method => 'get' do %>
            <p>
              <%=  text_field_tag :search_query, params[:search_query] %>
              <%=  submit_tag "Search Products", :name => nil, :class => "button" %>
            </p>
        <% end %>
        </div>




    </div>



    <%= yield %>


</div>
</body>
</html>
