<!DOCTYPE html>
<html>
<head>
  <title>kidzboutique</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <div id="header">
    <%= link_to image_tag('header.png'), store_index_path %>
  </div>

  <!-- MENU -->
  <div id="menu">
    <ul>
      <li><%= link_to "Home", store_index_path %></li>
      <% if logged_in? %>
          <li><%=  link_to "Profile", logout_path %></li>
          <li><%=  link_to "Orders History", orders_path %></li>
          <li><%=  link_to "Logout", logout_path %></li>
      <% end %>
    </ul>
  </div>

  <div id="search_form">
    <% form_tag store_path, :method => 'get' do %>
        <p>
            <%= select(:category, params[:category], Category.all.map{|cat| [cat.category_name, cat.id]}) %>
            <%=  text_field_tag :search_query, params[:search_query] %>
            <%=  submit_tag "Find Products", :name => nil, :class => "button" %>
        </p>
      <% end %>
  </div>

  <%= yield %>


</div>
</body>
</html>