<p id="notice"><%= notice %></p>

<%= # display the current image attached to the product
    image_tag(@product.picture, :class => 'showProduct', :alt => 'Current Image', :title => 'Current Image')
%>

<h1>
  <%= @product.product_name %>
</h1>
<table>
  <tr>
    <td class='label'>Description</td>
    <td><%= @product.description %></td>
  </tr>
  <tr>
    <td class='label'>Category</td>
    <td><%= @product.category.try(:category_name) %></td>
  </tr>
  <tr>
    <td class='label'>Unit Price</td>
    <td><%= number_to_currency(@product.unit_price, :unit=>'â‚¬') %></td>
  </tr>
  <tr>
    <td class='label'>Colour</td>
    <td> <%= @product.colour %></td>
  </tr>
  <tr>
    <td class='label'>Gender</td>
    <td><%= image_tag(@product.gender.icon_url, :alt => @product.gender.gender, :title => @product.gender.gender, :class => 'icon') %></td>
  </tr>
  <tr>
    <td class='label'>Active</td>
    <td><%=  @product.active %></td>
  </tr>
</table>

<table class="nav_icons">
  <tr>
    <td><%= link_to image_tag('icons/back.png', :alt => "Back", :title => "Back"), products_path %></td>
    <td><%= link_to image_tag('icons/edit.png', :alt => "Edit", :title => "Edit"), edit_product_path(@product) %></td>
    <td><%= link_to image_tag('icons/delete.png', :alt => 'Delete', :title => 'Delete Product'), @product, :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
  </tr>
</table>




