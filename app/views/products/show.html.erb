<p id="notice"><%= notice %></p>

<%= # display the current image attached to the product
    image_tag(@product.picture, :class => 'showProduct', :alt => 'Current Image', :title => 'Current Image')
%>

<h1>
  <%= @product.product_name %>
</h1>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Category:</b>
  <%= @product.category.try(:category_name) %>
</p>

<p>
  <b>Unit price:</b>
  <%= number_to_currency(@product.unit_price, :unit=>'â‚¬') %>
</p>
<p>
  <b>Colour:</b>
  <%= @product.colour %>
</p>

<p>
  <b>Size:</b>
  <%= @product.size %>
</p>

<p>
  <b>Gender:</b>
  <%= image_tag(@product.gender.icon_url, :alt => @product.gender.gender, :title => @product.gender.gender, :class => 'icon') %>
</p>

<p>
  <b>Active:</b>
  <%= @product.active %>
</p>

<table class="nav_icons">
  <tr>
    <td><%= link_to image_tag('icons/back.png', :alt => "Back", :title => "Back"), products_path %></td>
    <td><%= link_to image_tag('icons/edit.png', :alt => "Edit", :title => "Edit"), edit_product_path(@product) %></td>
    <td><%= link_to image_tag('icons/delete.png', :alt => 'Delete', :title => 'Delete Product'), @product, :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
  </tr>
</table>




