<%= form_for(@product, :html => { :multipart => true }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
  <tr class="field">
    <td><%= f.label :product_name %></td>
    <td><%= f.text_field :product_name %> </td>
  </tr>
  <tr class="field">
    <td><%= f.label :category_id %>   </td>
    <td><%= f.collection_select(:product, :category_id, @categories, :id, :category_name, {:prompt => false })  %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :description %> </td>
    <td><%= f.text_area :description %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :unit_price %> </td>
    <td><%= f.text_field :unit_price %> </td>
  </tr>
  <tr class="field">
    <td><%= f.label :photo %></td>
    <td><%= f.file_field :photo %> </td>
  </tr>
  <tr class="field">
    <td> <%= f.label :picture %> </td>
    <td><%= f.text_field :picture %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :colour %></td>
    <td><%= f.text_field :colour %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :gender %></td>
    <td><%= collection_select(:product, :gender_id, @genders, :id, :gender, {:prompt => false })  %></td>
  </tr>
  <tr class="field">
    <td></td>
    <td><%= f.check_box :active %> <%= f.label :active %> </td>
  </tr>
  <tr class="actions">
    <td></td>
    <td><%= f.submit %></td>
  </tr>
  </table>

<% end %>
