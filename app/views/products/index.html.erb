<h1>Our Collection</h1>

<!-- Search Field -->
<div id="search_form">
<% form_tag products_path, :method => 'get' do %>
    <p>
      <%=  text_field_tag :search_query, params[:search_query] %>
      <%=  submit_tag "Search", :name => nil %>
    </p>
<% end %>
</div>
<div class="clearfix"></div>
<table class="<%= controller.controller_name %>">
  <tr>
    <th>Picture</th>
    <th>Product name</th>
    <th>Description</th>
    <th>Unit price</th>
    <th>Colour</th>
    <th>Size</th>
    <th>Gender</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= image_tag(product.picture, class: 'thumb')%></td>
    <td><%= product.product_name %></td>
    <td><%= product.description %></td>
    <td>â‚¬<%= product.unit_price %></td>
    <td><%= product.colour %></td>
    <td><%= product.size %></td>
    <td><%= product.gender %></td>
    <td><%= product.active %></td>
    <td><%= link_to image_tag('show.png', :alt => "Show"), product %></td>
    <td><%= link_to image_tag('edit.png', :alt => "Edit"), edit_product_path(product) %></td>
    <td><%= link_to image_tag('delete.png', :alt => "Delete"), product, :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
  </tr>
<% end %>
</table>

