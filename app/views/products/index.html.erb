<h1>Our Collection</h1>
<p><%= link_to image_tag('icons/add.png', :alt => 'Add', :title => 'Add New Product') + "Add New Product", new_product_path %></p>
<table class="<%= controller.controller_name %>">
  <tr>
    <th>Picture</th>
    <th>Product name</th>
    <th>Description</th>
    <th>Unit price</th>
    <th>Colour</th>
    <th>Gender</th>
    <th>Category</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <% if product.active %>
        <tr>
    <% else %>
        <tr class="inactive">
    <% end %>

    <%  if product.photo.exists? then %>
      <td><%= image_tag(product.photo.url(:small)) %></td>
    <% else %>
       <td class="thumb"><%= image_tag(product.picture) %></td>
    <% end %>
    <td><%= product.product_name %></td>
    <td><%= product.description %></td>
    <td><%= number_to_currency(product.unit_price,:unit=>'â‚¬') %></td>
    <td><%= product.colour %></td>
    <td><%= image_tag(product.gender.icon_url, :alt => product.gender.gender, :title => product.gender.gender, :class => 'icon') %></td>
    <td><%= product.category.try(:category_name) %></td>
    <td><%= product.user_id %></td>
    <td><%= link_to image_tag('icons/show.png', :alt => 'Show', :title => 'Show Product Information'), product %></td>
    <% unless current_user.admin %>
        <td><%= link_to image_tag('icons/edit.png', :alt => 'Edit', :title => 'Edit Product'), edit_product_path(product) %></td>
        <td><%= link_to image_tag('icons/delete.png', :alt => 'Delete', :title => 'Delete Product'), product, :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
    <% end %>
     </tr>
  <% end %>
</table>


