<!-- MENU -->
<div id="menu">
  <ul>
    <li><%= link_to "Products", products_path %></li>
  </ul>
  <!-- SEARCH FIELD -->
  <div id="search_form">
    <% form_tag products_path, :method => 'get' do %>
        <p>
          <%=  text_field_tag :search_query, params[:search_query] %>
          <%=  submit_tag "Search", :name => nil,
                          :class => "button" %>
        </p>
    <% end %>
  </div>
</div>

<h1>Our Collection</h1>

<div class="clearfix"></div>
<table class="<%= controller.controller_name %>">
  <tr>
    <th>Picture</th>
    <th>Product name</th>
    <th>Description</th>
    <th>Unit price</th>
    <th>Colour</th>
    <th>Size</th>
    <th>Gender</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="thumb"><%= image_tag(product.picture) %></td>
    <td><%= product.product_name %></td>
    <td><%= product.description %></td>
    <td><%= number_to_currency(product.unit_price,:unit=>'â‚¬') %></td>
    <td><%= product.colour %></td>
    <td><%= product.size %></td>
    <td><%= product.gender %></td>
    <td><%= product.active %></td>
    <td><%= link_to image_tag('icons/show.png', :alt => 'Show', :title => 'Show Product Information'), product %></td>
    <td><%= link_to image_tag('icons/edit.png', :alt => 'Edit', :title => 'Edit Product'), edit_product_path(product) %></td>
    <td><%= link_to image_tag('icons/delete.png', :alt => 'Delete', :title => 'Delete Product'), product, :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
  </tr>
<% end %>
</table>

