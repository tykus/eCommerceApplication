<h1>New order</h1>
<table>
  <tr>
    <th class='left'>Product Name</th>
    <th>Quantity Ordered</th>
    <th class='right'>Unit Price</th>
    <th class='right'>Total Price</th>
  </tr>
  <% @line_items.each do |line_item| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td><%= line_item.stock_item.product.product_name %></td>
        <td class='center'><%= line_item.quantity %></td>
        <td class='right'><%= number_to_currency(line_item.stock_item.product.unit_price, :unit => '&euro;') %></td>
        <td class='right'><%= number_to_currency(line_item.subtotal, :unit => '&euro;') %></td>
      </tr>
  <% end %>
  <tr class='total'>
    <td></td>
    <td></td>
    <td>Order Total:</td>
    <td><%= number_to_currency(current_cart.total_price, :unit => '&euro;') %></td>
  </tr>
</table>

<%= render 'form' %>



<%= link_to 'Back', orders_path %>
